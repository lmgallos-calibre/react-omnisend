{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES6",
    "target": "ES5",
    "lib": ["DOM", "ES6"],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}